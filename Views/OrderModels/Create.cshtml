@model FoodApp.Models.OrderModel;

@{
    ViewData["Title"] = "Create";
}

<h1>Create Order</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post">
            <input name="Pizza.Id" value="@ViewBag.PizzaId"/>
@*             <input type="hidden" name="Pizza.Name" value="@ViewBag.Pizza.Name"/> 
 *@            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

             <div class="form-group">
                <label >Pizza Name: </label>
                <span>@ViewBag.PizzaName</span>
            </div>

            <hr/>
   
          <div class="form-group">
                <label asp-for="Status" class="control-label"></label>
                <select asp-for="Status" class="form-control" asp-items="@(new SelectList(Enum.GetValues(typeof(OrderStatus))))"></select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
          
            <div class="form-group">
                <label asp-for="Quantity" class="control-label"></label>
                <input asp-for="Quantity" class="form-control" type="number" min = "1" />
                <span asp-validation-for="Quantity" class="text-danger" ></span>
            </div>
            <br>
            <button asp-controller="OrderModels" asp-action="Create" type="submit" class="btn-btn-primary">Order</button>
        
        </form>
    </div>
</div>
